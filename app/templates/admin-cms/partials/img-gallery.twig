{% extends "base.html.twig" %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">

            <section class="panel">
                <header class="panel-heading">
                    <a class="btn btn-info" href="javascript:history.back()">Voltar</a>
                    <span class="tools pull-right">
                        <a class="fa fa-repeat box-refresh" href="javascript:;" onclick="resetForm('formImg')"></a>
                        <a class="t-collapse fa fa-chevron-down" href="javascript:;"></a>
                    </span>
                </header>
                    <!--body wrapper start-->
                    <div class="wrapper no-pad">
                        <div class="profile-desk">
                            <aside class="p-aside">


                                <ul class="gallery">
                                    {% for content in data.contentEdit %}
                                    <li class="editContent">
                                        <a href="#" data-id="{{ content.id }}">
                                            <img src="{{ base_url() }}/website/assets/img/img-gallery/{{ content.imageVideo.id }}/thumb/{{ 'thumb_' ~ content.nameGenerate }}" width="{{ page.media['thumb_' ~ content.nameGenerate].height }}" height="{{ imgHeight }}" alt="{{ content.caption }}"/>
                                        </a>
                                        <button class="btn btn-danger btn-xs" id="btnUpdateImg" data-id="{{ content.id }}"><i class="fa-trash-o"></i></button>
                                    </li>
                                    {% endfor %}
                                </ul>

                            </aside>
                            <aside class="p-short-info">
                                <div class="widget">
                                    <form role="form" id="formImg" enctype="multipart/form-data">


                                        <div class="form-group row gal-upload">
                                            <label class="col-lg-12 control-label">Upload Image</label>
                                            <div class="col-lg-12">
                                                <input id="file-4" class="file" type="file" multiple=true>
                                            </div>
                                        </div>
                                        <br/>

                                        <div id="editContentMetaData" style="display: none;">
                                            <div class="title">
                                                <h1>Detalhes do arquivo #</h1>
                                            </div>

                                            <div class="form-group">
                                                <label for="txtDescription">Descri&ccedil;&atilde;o</label>
                                                <input type="text" class="form-control" id="txtDescription" name="txtDescription" placeholder="Informe uma descrição o vídeo">
                                            </div>
                                            <div class="form-group">
                                                <label for="txtTitle">T&iacute;tulo</label>
                                                <input type="text" class="form-control" id="txtTitle" name="txtTitle" placeholder="Informe um título para a imagem">
                                            </div>
                                            <div class="form-group">
                                                <label for="txtCaption">Legenda</label>
                                                <input type="text" class="form-control" id="txtCaption" name="txtCaption" placeholder="Informe uma legenda">
                                            </div>
                                            <div class="form-group">
                                                <label for="txtUrl">URL</label>
                                                <input type="text" class="form-control" id="txtUrl" name="txtUrl" placeholder="Informe a url (link) do vídeo">
                                            </div>

                                            <input type="hidden" id="txtContentEdit" name="txtContentEdit"/>

                                            <button type="submit" class="btn btn-success" id="btnAtualizar">Atualizar</button>
                                        </div>
                                    </form>

                                </div>

                            </aside>
                        </div>

                    </div>
                    <!--body wrapper end-->
            </section>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="removeData" data-toggle="modal" tabindex="-1" role="dialog" aria-labelledby="removeData"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;
                    </button>
                    <h4 class="modal-title">Cadastro::Menu</h4>
                </div>
                <div class="modal-body">
                    <p>O registro será deletado.</p>
                    <p>Confirma operação?</p>
                    <input type="hidden" id="data-id"/>
                </div>
                <div class="modal-footer">
                    <button data-dismiss="modal" class="btn btn-send">Cancelar</button>
                    <button class="btn btn-danger" id="btnRemover">Remover</button>
                </div>
            </div>
        </div>
    </div>
    <!-- modal -->

{% endblock %}